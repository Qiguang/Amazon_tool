{
	"manifest_version": 2,
	"name": "my clock",
	"version": "1.0",
	"description": "my first chrome plugin",
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"browser_action": {
		"default_icon": {
			"19": "images/icon19.png",
			"38": "images/icon38.png"
		},
		"default_title": "my clock",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://www.amazon.com/*", "*://www.amazon.co.jp/*"],
			"js": ["js/changePageBkgdColor.js"]
		},
		{
			"matches": ["*://www.amazon.com/s/*"],
			"js": ["js/utils.js","js/showRMBschRsltPage.js"]
		},
		{
			"matches": [ "*://www.amazon.co.jp/s/*"],
			"js": ["js/utils.js","js/showRMBschRsltPage.js"]
		}
	],
	"background": {
		"scripts": [
			"js/utils.js",
			"js/getExchangeRate.js"
		]
	},
	"permissions": [
		"*://www.amazon.com/",
		"*://www.amazon.jp/",
		"http://hl.anseo.cn/rate_USD.aspx"
	]
}
